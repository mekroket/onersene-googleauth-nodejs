                        </div>
                        <div class="card-body">
                            <form action="/admin/service/add" method="POST" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="categorySelect" class="form-label text-success">Hizmetin Kategorisini Seçin:</label>
                                    <select class="form-select" id="categorySelect" name="categoryId">
                                        <% categories.forEach(function(category) { %>
                                        <option value="<%= category._id %>"><%= category.category %></option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label for="smallBusinessSelect" class="form-label">Hizmeti Sunan Esnafı Seçin:</label>
                                    <select class="form-select" id="smallBusinessSelect" name="smallBusinessId">
                                        <% smallBusiness.forEach(function(sb) { %>
                                        <option value="<%= sb._id %>"><%= sb.SB_name %></option>
                                        <% }); %>
                                    </select>
                                </div>                                
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-name">Hizmet Adı:</label>
                                    <input type="text" class="form-control" id="basic-default-name" name="serviceName"
                                        placeholder="Hizmet Adını Giriniz..." required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-price">Hizmet Fiyatı:</label>
                                    <input type="number" class="form-control" id="basic-default-price" name="servicePrice"
                                        placeholder="Hizmet Fiyatını Giriniz..." required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-brand">Hizmet Markası:</label>
                                    <input type="text" class="form-control" id="basic-default-brand" name="serviceBrand"
                                        placeholder="Hizmet Markasını Giriniz..." required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-content">Hizmet İçeriği:</label>
                                    <textarea class="form-control" id="basic-default-content" name="serviceContent"
                                        placeholder="Hizmet İçeriğini Giriniz..." required></textarea>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-image1">Hizmet Resmi-1:</label>
                                    <input type="file" class="form-control" id="basic-default-image1" name="image1" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-image2">Hizmet Resmi-2:</label>
                                    <input type="file" class="form-control" id="basic-default-image2" name="image2" required>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="basic-default-image3">Hizmet Resmi-3:</label>
                                    <input type="file"  class="form-control" id="basic-default-image3" name="image3" required>
                                </div>
                                <div class="mb-3 form-check">
                                    <input type="checkbox" class="form-check-input" id="basic-default-popular" name="isPopular" value="true">
                                    <label class="form-check-label" for="basic-default-popular">Bu bir popüler hizmet mi?</label>
                                </div>
                                <div class="text-end">
                                    <button type="submit" class="btn btn-success">Hizmeti Ekle</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                





